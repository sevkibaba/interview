# NASA API Configuration
NASA_API_BASE_URL=https://api.nasa.gov
NASA_API_ENDPOINT=/neo/rest/v1/neo/browse
NASA_API_DEMO_KEY=DEMO_KEY

# Rate Limiting
API_RATE_LIMIT_INTERVAL=0.5
API_MAX_REQUESTS_PER_SECOND=2

# Data Processing
TOTAL_NEO_LIMIT=200
BATCH_SIZE=20
PARTITION_SIZE=20
CLOSE_APPROACH_THRESHOLD_AU=0.2

# Retry Configuration
RETRY_COUNT=5

# File Paths
OUTPUT_DIR=output
RAW_DATA_DIR=raw
AGGREGATIONS_DIR=aggregations
PARTITION_PREFIX=batch-number
PARQUET_FILE_PREFIX=neo_partition
AGGREGATIONS_FILE_NAME=close_approaches_aggregations.parquet

# Spark Configuration
SPARK_APP_NAME=NASA_NEO_Aggregations
SPARK_MASTER=local[*]
SPARK_SQL_ADAPTIVE_ENABLED=true
SPARK_SQL_ADAPTIVE_COALESCE_ENABLED=true
SPARK_PARQUET_BLOCK_SIZE=134217728

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Docker
DOCKER_IMAGE_NAME=neo-spark-job
DOCKER_WORKING_DIR=/app

# Test Configuration
TEST_DATA_DIR=test_data
TEST_OUTPUT_DIR=test_output
